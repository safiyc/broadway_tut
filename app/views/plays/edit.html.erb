<h1>Edit Play</h1>

<!-- 'html: {...}' is for what? -->
<%= simple_form_for @play, html: {multipart: true} do |f| %>
  <%= f.select :category_id, @categories %>
  <%= f.input :title, label: "Play Title" %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.button :submit %>
<% end %>

<p><%= link_to "Return to play", play_path %></p>
